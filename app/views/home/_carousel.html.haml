#carousel-background.carousel.slide.carousel-fade{"data-ride" => "carousel", "data-pause" => "", "data-keyboard" => "false"}
  / Indicators
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#carousel-background"}
    %li{"data-slide-to" => "1", "data-target" => "#carousel-background"}
    %li{"data-slide-to" => "2", "data-target" => "#carousel-background"}
    %li{"data-slide-to" => "3", "data-target" => "#carousel-background"}
  / Wrapper for slides
  .carousel-inner{role: "listbox"}
    .item.active
      %img{src: "assets/drewno.jpg"}
    .item
      %img{src: "assets/ogien.jpg"}
    .item
      %img{src: "assets/pellet.jpg"}
    .item
      %img{src: "assets/serce.jpg"}